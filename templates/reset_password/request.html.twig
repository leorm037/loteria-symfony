{# templates/reset_password/request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Recuperar senha{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><i class="bi bi-key-fill"></i> Recuperar senha</li>
{% endblock %}

{% block body %}
    {{ form_start(requestForm, {'attr':{'data-loading':'true'}}) }}
    <div class="row justify-content-md-center">
        <div class="col col-xl-4 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h4 m-0"><i class="bi bi-key-fill"></i> Recuperar senha</h1>
                </div>
                <div class="card-body">
                    {{ form_row(requestForm.email) }}
                    <p class="card-text">
                        <small class="text-body-secondary">
                            Informe o seu endereço de e-mail e nós enviaremos
                            uma mensagem com o link para recuperar a sua senha.
                        </small>
                    </p>
                </div>
                <div class="card-footer bg-gradient d-flex justify-content-between">
                    <div>
                        <a data-loading="true" class="btn btn-outline-secondary bg-gradient btn-sm" href="{{ path('app_login_index') }}"><i class="bi bi-arrow-left"></i> Voltar</a>
                    </div>
                    <div>
                        <button type="reset" class="btn btn-secondary bg-gradient btn-sm"><i class="fa-solid fa-broom"></i> Limpar</button>
                        <button type="submit" class="btn btn-primary bg-gradient btn-sm"><i class="bi bi-envelope"></i> Enviar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
