{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Recuperar senha{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><i class="bi bi-key-fill"></i> Recuperar senha</li>
{% endblock %}

{% block body %}
    {{ form_start(resetForm, {'attr':{'data-loading':'true'}}) }}
    <div class="row justify-content-md-center">
        <div class="col col-xl-4 col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h1 class="h4 m-0"><i class="bi bi-key-fill"></i> Recuperar senha</h1>
                </div>
                <div class="card-body">  
                    {{ form_row(resetForm.plainPassword) }}
                </div>
                <div class="card-footer bg-gradient text-end">                    
                    <div>
                        <button type="reset" class="btn btn-secondary bg-gradient btn-sm"><i class="fa-solid fa-broom"></i> Limpar</button>
                        <button type="submit" class="btn btn-primary bg-gradient btn-sm"><i class="bi bi-floppy"></i> Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(resetForm) }}
{% endblock %}
