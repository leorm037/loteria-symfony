{# templates/aposta/index.html.twig #}
{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><i class="bi bi-ticket-perforated"></i> Aposta</li>
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div><h1 class="h4 m-0"><i class="bi bi-ticket-perforated"></i> Aposta</h1></div>
                <div>
                    <a href="{{ path('app_aposta_importar') }}" class="btn btn-primary btn-sm bg-gradient shadow-sm">
                        <i class="bi bi-box-arrow-in-down"></i> Importar
                    </a>
                    <a href="{{ path('app_aposta_importar') }}" class="btn btn-secondary btn-sm bg-gradient shadow-sm">
                        <i class="bi bi-plus"></i> Novo
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Loteria</th>
                            <th>Concurso</th>
                            <th>Dezenas</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    {% for aposta in apostas %}
                        <tr>
                            <td>{{ aposta.concurso.loteria.nome }}</td>
                            <td>{{ aposta.concurso.numero }}</td>
                            <td>{{ aposta.dezenas|join(', ') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">Nenhum registro encontrado</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
