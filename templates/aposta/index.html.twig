{# templates/aposta/index.html.twig #}
{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><i class="bi bi-ticket-perforated"></i> Aposta</li>
{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div><h1 class="h4 m-0"><i class="bi bi-ticket-perforated"></i> Aposta</h1></div>
                <div>
                    <a data-loading="true" href="{{ path('app_aposta_importar') }}" class="btn btn-primary btn-sm bg-gradient shadow-sm">
                        <i class="bi bi-box-arrow-in-down"></i> Importar
                    </a>
                    <a data-loading="true" href="{{ path('app_aposta_importar') }}" class="btn btn-secondary btn-sm bg-gradient shadow-sm">
                        <i class="bi bi-plus"></i> Novo
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Loteria</th>
                            <th class="text-end">Concurso</th>
                            <th class="text-end">Apuração</th>
                            <th class="text-end">Dezenas</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    {% for aposta in apostas %}
                        <tr>
                            <td>{{ aposta.concurso.loteria.nome }}</td>
                            <td class="text-end">{{ aposta.concurso.numero }}</td>
                            <td class="text-end">{{ (aposta.concurso.apuracao) ? aposta.concurso.apuracao|date('d/m/Y','America/Sao_Paulo') : "Não apurado" }}</td>
                            <td class="text-end">{{ aposta.dezenas|join(', ') }}</td>
                            <td class="text-center">
                                <a data-loading="true" role="button" class="btn btn-sm btn-danger" href="#">
                                    <i class="bi bi-trash"></i> <span class="d-none d-xl-inline-block">Excluir</span>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Nenhum registro encontrado</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
