{# templates/aposta/importar.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Aposta :: Importar{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="card shadow-sm">
        <div class="card-header bg-gradient">
            <h1 class="h4 m-0"><i class="bi bi-upload"></i> Importar apostas</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-6">
                    {{ form_row(form.loteria) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.numero) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-md-6">
                    {{ form_row(form.arquivoPlanilhaCsv) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.arquivoComprovantePdf) }}
                </div>
            </div>
        </div>
        <div class="card-footer bg-gradient d-flex justify-content-between">
            <div>
                <a class="btn btn-outline-secondary bg-gradient btn-sm" href="#"><i class="bi bi-arrow-left"></i> Voltar</a>
            </div>
            <div>
                <button type="reset" class="btn btn-secondary bg-gradient btn-sm"><i class="fa-solid fa-broom"></i> Limpar</button>
                <button type="submit" class="btn btn-primary bg-gradient btn-sm"><i class="bi bi-floppy"></i> Salvar</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
