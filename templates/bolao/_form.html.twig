{# bolao/_form.html.twig #}
{{ form_errors(form) }}
<div class="row">
    <div class="col-12 col-md-6">
        {{ form_row(form.loteria) }}
    </div>
    <div class="col-12 col-md-6">
        {{ form_row(form.concursoNumero) }}
    </div>
    <div class="col-12">
        {{ form_row(form.nome) }}
    </div>
    <div class="col-12 col-md-6">
        <div class="mb-3">
            {{ form_label(form.arquivoPlanilhaCsv) }}
            <div class="input-group">
                <div class="input-group-text"><i class="bi bi-filetype-csv"></i></div>
                {{ form_widget(form.arquivoPlanilhaCsv) }}
            </div>
            {{ form_errors(form.arquivoPlanilhaCsv) }}
            {{ form_help(form.arquivoPlanilhaCsv) }}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="mb-3">
            {{ form_label(form.arquivoComprovantePdf) }}
            <div class="input-group">
                <div class="input-group-text"><i class="bi bi-filetype-pdf"></i></div>
                {{ form_widget(form.arquivoComprovantePdf) }}
            </div>
            {{ form_errors(form.arquivoComprovantePdf) }}
            {{ form_help(form.arquivoComprovantePdf) }}
        </div>
    </div>
</div>