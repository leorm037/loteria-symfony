{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="generator" content="">
        
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('site.webmanifest') }}">
        
        <title>{% block title %}Loteria{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css', 'bootstrap') }}" rel="stylesheet">
            <link href="{{ asset('font/bootstrap-icons.min.css', 'bootstrap-icon') }}" rel="stylesheet">            
        {% endblock %}
        {% block javascripts_header %}

            <script type="text/javascript">
                const BASE_URL = "{{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}";
            </script>
        {% endblock %}
    </head>
    <body>
        <main class="mb-3">
            {% include '_flash.html.twig' %}
            <div class="container-fluid">
                {% block body %}{% endblock %}
            </div>
        </main>
        <footer class="mt-auto">
        </footer>
        {% block javascripts_footer %}
            
            <script src="{{ asset('jquery-3.7.1.min.js', 'jquery') }}"></script>
            <script src="{{ asset('js/bootstrap.bundle.min.js', 'bootstrap') }}"></script>
            <script type="text/javascript" src="https://kit.fontawesome.com/403477f2af.js" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
