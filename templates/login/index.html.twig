{# templates/login/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Entrar{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item active"><i class="bi bi-door-closed"></i> Entrar</li>
{% endblock %}

{% block body %}
    <form action="{{ path('app_login_index') }}" method="post" data-loading="true">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="row justify-content-md-center">
            <div class="col col-xl-4 col-md-6">
                <div class="card shadow">
                    <div class="card-header">
                        <h1 class="h4 m-0"><i class="bi bi-door-closed"></i> Entrar</h1>                            
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="username" class="form-label required">E-mail</label>
                            <div class="input-group">
                                <span class="input-group-text" id="username-icone"><i class="bi bi-envelope-at"></i></span>
                                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" autocomplete="username" placeholder="name@example.com" required="required">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label required">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text" id="password-icone"><i class="bi bi-key"></i></span>
                                <input type="password" class="form-control" id="password" name="_password" autocomplete="current-password" required="required">
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="remember">
                                <label class="form-check-label" for="remember">Ficar conectado</label>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a href="{{ path('app_forgot_password_request') }}" data-loading="true" class="btn btn-outline-secondary btn-sm shadow"><i class="bi bi-key"></i> Recuperar senha</a>
                            </div>
                            <div>
                                <button type="reset" class="btn btn-secondary btn-sm shadow"><i class="fa-solid fa-broom"></i> Limpar</button>
                                <button type="submit" class="btn btn-primary btn-sm shadow"><i class="bi bi-door-closed"></i> Entrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </form>
{% endblock %}