#!/usr/bin/env php
<?php

$envFile = __DIR__ . '/../.env';

if (!file_exists($envFile)) {
    $message = sprintf('Não foi possível encontrar o arquivo %s./n', $envFile);

    die($message);
}

$envContent = file_get_contents($envFile);

if (preg_match('/^APP_VERSION=([0-9\.]+)/m', $envContent, $matches)) {    
    $versionCurrent = $matches[1];
    
    list($major, $minor, $patch) = explode('.', $versionCurrent);
    
    $versionNew = $major . '.' . $minor . '.' . ++$patch;
    
    $envContentNew = preg_replace('/APP_VERSION=([0-9\.]+)/m', 'APP_VERSION=' . $versionNew, $envContent);
    
    if (file_put_contents($envFile, $envContentNew) === false) {
        $message = sprintf('Não foi possível atualizar o arquivo %s./n', $envFile);

        die($message);
    }
    
    $message = sprintf('APP_VERSION versão %s incrementado para %s!/n', $versionCurrent, $versionNew);
    
    echo $message;
} else {
    die('Não foi possível encontrar APP_ENV./n');
}